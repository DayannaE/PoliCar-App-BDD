{
  "name": "poli-car-app-bdd",
  "version": "1.0.0",
  "description": "Aplicación distribuida para gestión de vehículos en POLI-CAR con fragmentación y replicación",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node scripts/testConnection.js",
    "check-tables": "node scripts/checkTables.js",
    "setup-db": "node scripts/setupDatabase.js",
    "setup-full": "node scripts/setupFullSystem.js",
    "setup-views": "sqlcmd -S localhost\\SQLEXPRESS -i scripts/setupPartitionedViews.sql",
    "health": "curl http://localhost:3000/api/health || echo 'Servidor no está corriendo'"
